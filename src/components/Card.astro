---
const { title, image, isKeyCardEU, isKeyCardUSA, isKeyCardASIA } = Astro.props;
---

<div class="game-card">
  <img src={image} alt={title} class="game-image" />
  <div class="game-content">
    <h2 class="game-title">{title}</h2>

    <div class="isKeyCards">
      <span
        class={`isKeyCard ${isKeyCardEU === true ? "true" : isKeyCardEU === false ? "false" : "unknown"}`}
      >
        {isKeyCardEU === true ? "🔑" : isKeyCardEU === false ? "💾" : "❓"} Europa
      </span>
      <span
        class={`isKeyCard ${isKeyCardUSA === true ? "true" : isKeyCardUSA === false ? "false" : "unknown"}`}
      >
        {isKeyCardUSA === true ? "🔑" : isKeyCardUSA === false ? "💾" : "❓"} América
      </span>
      <span
        class={`isKeyCard ${isKeyCardASIA === true ? "true" : isKeyCardASIA === false ? "false" : "unknown"}`}
      >
        {isKeyCardASIA === true ? "🔑" : isKeyCardASIA === false ? "💾" : "❓"} Asia
      </span>
    </div>
  </div>
</div>

<style>
  .game-card {
    width: 100%;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
    background: #fff;
    font-family: system-ui, sans-serif;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .game-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 24px rgba(0, 0, 0, 0.15);
  }

  .game-image {
    width: 100%;
    height: 160px;
    object-fit: cover;
  }

  .game-content {
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .game-title {
    font-size: 18px;
    font-weight: 600;
    color: #222;
    margin: 0;
  }

  .isKeyCards {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .isKeyCard {
    font-size: 14px;
    padding: 4px 8px;
    border-radius: 8px;
    background-color: #eee;
    color: #444;
  }

  .isKeyCard.true {
    background-color: #ef5e5e;
    color: #ffffff;
    font-weight: bold;
  }

  .isKeyCard.false {
    background-color: #31b550;
    color: #ffffff;
    font-weight: bold;
  }

  .isKeyCard.unknown {
    background-color: #d0d0d0;
    color: #ffffff;
    font-weight: bold;
  }

  .keycard-status {
    margin-top: 8px;
    font-size: 14px;
    font-weight: 500;
    color: #555;
  }
</style>
